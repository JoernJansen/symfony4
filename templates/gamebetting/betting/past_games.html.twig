{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header text-center">
                    <h5>Alle vergangene Spiele{% if username is not empty  %} von {{ username }}{% endif %}</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class="">
                                    <tr>
                                        <th>
                                            Datum
                                        </th>
                                        <th>
                                            Team 1
                                        </th>
                                        <th>
                                            Team 2
                                        </th>
                                        <th>
                                            Ergebnis
                                        </th>
                                        <th>
                                            Tipp
                                        </th>
                                        <th class="text-right">
                                            Punkte
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for game in pastGamesForm %}
                                        <tr>
                                            <td>
                                                {{ game.gameDate|date("d.m.Y G:i") }}
                                            </td>
                                            <td>
                                                {{ game.firstTeamName }}
                                            </td>
                                            <td>{{ game.secondTeamName }}</td>
                                            <td>
                                                {{ game.firstTeamResult }} : {{ game.secondTeamResult }}
                                            </td>
                                            <td>
                                                {% if game.firstTeamUserResult is null or game.secondTeamUserResult is null %}
                                                    -
                                                {% else %}
                                                    {{ game.firstTeamUserResult }} : {{ game.secondTeamUserResult }}
                                                {% endif %}
                                            </td>
                                            <td class="text-right">
                                                {{ game.score }}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}